# Environment Variables for Railway Deployment

# Server Configuration
PORT=8080

# Database Configuration (PostgreSQL on Railway)
DATABASE_URL=jdbc:postgresql://hostname:port/database
DATABASE_DRIVER=org.postgresql.Driver
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-password
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# PostgreSQL Railway Variables (auto-populated)
PGHOST=hostname
PGPORT=5432
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your-password

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
SQL_INIT_MODE=never

# Security Configuration
JWT_SECRET=your-very-long-and-secure-secret-key-here-minimum-256-bits
JWT_EXPIRATION=86400000

# H2 Console (disable in production)
H2_CONSOLE_ENABLED=false

# Spring Profile
SPRING_PROFILES_ACTIVE=railway
